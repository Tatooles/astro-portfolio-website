---
import { type CollectionEntry, getCollection, render } from "astro:content";
import StoreItemLayout from "../../layouts/StoreItemLayout.astro";

export async function getStaticPaths() {
  const itemEntries = await getCollection("store");
  return itemEntries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"store">;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<StoreItemLayout
  title={entry.data.title}
  description={entry.data.description}
  heroImage={entry.data.heroImage}
  updatedDate={entry.data.updatedDate}
  pricing={entry.data.pricing}
  oldPricing={entry.data.oldPricing}
  checkoutUrl={entry.data.checkoutUrl}
  badge={entry.data.badge}
  custom_link={entry.data.custom_link}
  custom_link_label={entry.data.custom_link_label}
>
  <Content />
</StoreItemLayout>
