  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Experience</div>
  </div>

  <div class="time-line-container mb-10">
    <TimeLineElement
      title="Software Engineer at Sentry Insurance"
      subtitle="From July 2025 to present"
    >
    </TimeLineElement>
    <TimeLineElement
      title="Software Developer at Sentry Insurance"
      subtitle="From May 2022 to July 2025"
    >
    </TimeLineElement>
    <TimeLineElement
      title="Associate Software Developer at Sentry Insurance"
      subtitle="From May 2021 to May 2022"
    >
    </TimeLineElement>
    <TimeLineElement
      title="Support Specialist Supervisor at DoIT Help Desk"
      subtitle="From May 2019 to May 2021"
    >
