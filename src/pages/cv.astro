    </TimeLineElement>
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="University of Wisconsin - Madison"
      subtitle="Bachelors, Computer Science, GPA: 3.8"
    />
    <TimeLineElement
      title="James Madison Memorial High School"
      subtitle="GPA: 3.97"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Certifications</div>
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <div class="mb-10">
    <!-- Front-End -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">Front-End</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>React.js</li>
        <li>Next.js</li>
        <li>Angular</li>
        <li>Vue.js</li>
        <li>TypeScript</li>
        <li>Tailwind CSS</li>
        <li>React Native</li>
        <li>JavaScript</li>
        <li>HTML</li>
        <li>CSS</li>
        <li>SASS</li>
        <li>Three.js</li>
      </ul>
    </div>

    <!-- Back-End -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">Back-End</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>Java</li>
        <li>Spring Boot</li>
        <li>Python</li>
        <li>C#</li>
        <li>C</li>
        <li>VB.NET</li>
        <li>Node.js</li>
        <li>Express.js</li>
        <li>.NET Framework</li>
      </ul>
    </div>

    <!-- Databases -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">Databases</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>Microsoft SQL Server</li>
        <li>MySQL</li>
        <li>SQLite</li>
        <li>Turso</li>
        <li>Drizzle ORM</li>
      </ul>
    </div>
    
    <!-- DevOps & Tools -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">DevOps & Tools</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>Dynatrace</li>
        <li>ELK Stack</li>
        <li>Jira</li>
        <li>SoapUI</li>
        <li>Linux</li>
        <li>Google Analytics</li>
      </ul>
    </div>

    <!-- Additional Tools -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">Additional Tools</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>Adobe Creative Suite</li>
        <li>Video Editing</li>
        <li>Microsoft Office</li>
        <li>Cherwell Service Management</li>
      </ul>
    </div>

    <!-- Soft Skills & Languages -->
    <div class="mb-6">
      <div class="text-xl font-semibold mb-2">Soft Skills & Languages</div>
      <ul class="list-disc md:columns-4 columns-2 mx-6">
        <li>Leadership</li>
        <li>Communication</li>
        <li>Public Speaking</li>
        <li>Technical Support</li>
        <li>Customer Support</li>
        <li>Spanish</li>
      </ul>
    </div>
  </div>
</BaseLayout>
